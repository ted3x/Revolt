<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="expandedHintEnabled">false</item>
        <item name="android:textColorHint">@color/foreground</item>
        <item name="placeholderTextColor">@color/foreground</item>
        <item name="materialThemeOverlay">@style/MyThemeOverlayOutlined</item>
        <item name="colorControlActivated">@color/foreground</item>
        <item name="colorControlHighlight">@color/foreground</item>
    </style>

    <style name="MyThemeOverlayOutlined">
        <item name="editTextStyle">@style/MyTextInputEditText_outlinedBox</item>
    </style>
    
    <style name="MyTextInputEditText_outlinedBox" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingTop">@dimen/dimen_p_12</item>
        <item name="android:paddingBottom">@dimen/dimen_p_12</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@drawable/accent_cursor</item>
    </style>
</resources>